<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
  <%= f.label 'Usuario' %>
  <%= f.text_field :username, :class => "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label 'Nombre' %>
  <%= f.text_field :firstname, :class => "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label 'Apellido' %>
  <%= f.text_field :lastname, :class => "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label 'Correo electrónico' %>
  <%= f.email_field :email, autofocus: true, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Contraseña' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label 'Soy un huesped: ' %>
  <%= f.check_box :owner, {checked: true}, '1', '0' %>
  <%= f.label 'Quiero ser anfitrión: ' %>
  <%= f.check_box :owner, {checked: false}, '1', '0' %>
  </div>
  <div class="form-group">
  <%= f.label 'Sí estoy dispuest@ a una investigacion domiciliaria: ' %>
  <%= f.check_box :terms_accepted, {checked: true}, '1', '0' %>
  </div>


  <div class="form-group">
    <%= f.submit "Continuar", :class => "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
