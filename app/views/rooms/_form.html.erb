<%= form_for(@room) do |f| %>
  <% if @room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
      <% @room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'Título' %><br>
    <%= f.text_field :title, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label 'Descripción' %><br>
    <%= f.text_area :description, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label 'Tipo de hospedaje' %><br>
    <%= f.select(:type, ['Casa','Departamento','Habitación Privada', 'Habitación Compartida'], :prompt => 'Seleccione uno',  :class => 'form-control' ) %>
  </div>
  <div class="form-group">
    <%= f.label 'Precio por noche' %><br>
    <%= f.text_field :price, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label 'Habitaciones disponibles' %><br>
    <%= f.text_field :rooms_available, :class => 'form-control' %>
  </div>
  <h3>Preferencias de huésped:</h3>
  <div class="form-group">
    <%= f.label 'Gays' %><br>
    <%= f.check_box :gays, {checked: true}, '1', '0' %>
  </div>
  <div class="form-group">
    <%= f.label 'Lesbianas' %><br>
    <%= f.check_box :lesbianas, {checked: true}, '1', '0' %>
  </div>
  <div class="form-group">
    <%= f.label 'Transexuales' %><br>
    <%= f.check_box :transexuales, {checked: true}, '1', '0' %>
  </div>
  <div class="form-group">
    <%= f.label 'Bisexuales' %><br>
    <%= f.check_box :bisexuales, {checked: true}, '1', '0' %>
  </div>
  <div class="form-group">
    <%= f.label 'Tercer género' %><br>
    <%= f.check_box :tercer_genero, {checked: true}, '1', '0' %>
  </div>
  <div class="form-group">
    <%= f.label 'Queer' %><br>
    <%= f.check_box :queer, {checked: true}, '1', '0' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Publicar', :class => 'btn btn-success' %>
  </div>
<% end %>
